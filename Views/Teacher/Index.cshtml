@{
    ViewData["Title"] = "Teacher Dashboard";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h2>@ViewData["WelcomeMessage"]</h2>
                </div>
                <div class="card-body">
                    <p>Welcome to your Teacher Dashboard. Here you can manage your classes, students, and assignments.</p>
                    
                    <div class="row mt-4">
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">My Classes</h5>
                                    <p class="card-text">View and manage your class schedule and rosters.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">Gradebook</h5>
                                    <p class="card-text">Record and manage student grades and attendance.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">Assignments</h5>
                                    <p class="card-text">Create and manage assignments and due dates.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
